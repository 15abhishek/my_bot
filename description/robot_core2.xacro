<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 0.3" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- BASE LINK -->

    <link name="base_link">

    </link>

    <!-- BASE_FOOTPRINT LINK -->

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="base_footprint">
    </link>


    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.4 0.18 0.005"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0"/>
            <geometry>
                <box size="0.4 0.18 0.005"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.4" y="0.18" z="0.005">
            <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/GreyTransparent</material>
    </gazebo>
   
    <!-- LEFT FRONT WHEEL LINK -->

    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.14 0.1175 -0.02" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.045"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0325"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.045" radius="0.0325">
            <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_left_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="10"></mu1>
        <mu2 value="10"></mu2>
        <kp>1e10</kp>
        <kd>1e8</kd>
    </gazebo>

    <!-- LEFT REAR WHEEL LINK -->

    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="-0.14 0.1175 -0.02" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1"/>
    </joint>

    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.045"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0325"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.045" radius="0.0325">
            <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rear_left_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="10"></mu1>
        <mu2 value="10"></mu2>
        <kp>1e10</kp>
        <kd>1e8</kd>
    </gazebo>
   
    <!-- RIGHT FRONT WHEEL LINK -->

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.14 -0.1175 -0.02" rpy="
        ${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.045"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0325"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.045" radius="0.0325">
            <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="front_right_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="10"></mu1>
        <mu2 value="10"></mu2>
        <kp>1e10</kp>
        <kd>1e8</kd>
    </gazebo>

    <!-- RIGHT REAR WHEEL LINK -->

    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="-0.14 -0.1175 -0.02" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.045"/>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0325"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.045" radius="0.0325">
            <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="rear_right_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="10"></mu1>
        <mu2 value="10"></mu2>
        <kp>1e10</kp>
        <kd>1e8</kd>
    </gazebo>

</robot>